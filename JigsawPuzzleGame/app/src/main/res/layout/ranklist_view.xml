<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="4dp"
        android:background="@drawable/bg_border4"
        android:orientation="horizontal">
        <!--<ImageView--><!--android:id="@+id/tv_touxiang"--><!--android:layout_width="100dp"--><!--android:layout_height="100dp"--><!--android:layout_margin="5px" />-->
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="aaa"
            android:textColor="@color/main_txt"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="aaa"
                android:textColor="@color/pink_soft"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_origtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="aaa"
                android:textColor="@color/main_txt"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
